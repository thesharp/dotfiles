{
    "diagnostic.displayByAle": true,
    "suggest.autoTrigger": "none",
    "languageserver": {
       "golang": {
         "command": "gopls",
         "filetypes": ["go"],
         "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"]
       },
       "dockerfile": {
         "command": "docker-langserver",
         "filetypes": ["dockerfile"],
         "args": ["--stdio"]
       }
     }
}
