{
    "languageserver": {
       "golang": {
         "command": "go-langserver",
         "filetypes": ["go"],
         "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
         "initializationOptions": {
           "gocodeCompletionEnabled": true,
           "diagnosticsEnabled": true,
           "funcSnippetEnabled": false,
           "lintTool": "golint"
         }
       },
       "dockerfile": {
         "command": "docker-langserver",
         "filetypes": ["dockerfile"],
         "args": ["--stdio"]
       }
     }
}
